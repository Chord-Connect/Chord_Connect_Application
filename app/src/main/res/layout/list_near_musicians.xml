<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivMusicianImage"
        android:layout_width="108dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle_shape"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvMusicianUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/fjalla_one"
        android:text="Kavan Adeshara"
        android:textColor="#DE6A50"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/ivMusicianImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMusicianDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/fjalla_one"
        android:text="0.00 miles"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/tvMusicianContact"
        app:layout_constraintTop_toBottomOf="@+id/tvMusicianUsername" />

    <TextView
        android:id="@+id/tvMusicianContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/fjalla_one"
        android:text="(267) 274-3528"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/ivMusicianImage"
        app:layout_constraintTop_toBottomOf="@+id/tvMusicianUsername" />

</androidx.constraintlayout.widget.ConstraintLayout>