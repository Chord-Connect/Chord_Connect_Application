<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RecordFragment">

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="99dp"
        android:fontFamily="@font/fjalla_one"
        android:text="Tap the record button to record audio"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Chronometer
        android:id="@+id/record_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInstructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/fjalla_one"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="36sp" />

    <ImageButton
        android:id="@+id/btnRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record_timer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/orange"
        android:src="@drawable/ic_baseline_mic_none_144" />

    <ImageButton
        android:id="@+id/btnAudioList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="209dp"
        android:layout_toEndOf="@+id/btnRecord"
        android:src="@drawable/ic_baseline_playlist_play_48" />

</RelativeLayout>